<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.ucetvbuhzb.acc.studentActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/color1"
            android:id="@+id/student_relativeLayout">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roll :"

                android:textSize="20dp"
                tools:text="Roll :"
                android:layout_alignBaseline="@+id/studentRoll"
                android:layout_alignBottom="@+id/studentRoll"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <EditText
                android:id="@+id/studentRoll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Roll No"
                android:inputType="textPersonName"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/dd"
                android:layout_alignStart="@+id/dd"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOB :"
                android:textSize="20dp"
                tools:text="DOB :"
                android:layout_alignBaseline="@+id/dd"
                android:layout_alignBottom="@+id/dd"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/studentRoll"
                android:layout_toStartOf="@+id/studentRoll" />

            <EditText
                android:id="@+id/dd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:ems="2"
                android:hint="dd"
                android:inputType="number"
                android:layout_marginStart="26dp"
                android:layout_below="@+id/studentRoll"
                android:layout_toRightOf="@+id/textView3"
                android:layout_toEndOf="@+id/textView3" />

            <EditText
                android:id="@+id/mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:hint="mm"
                android:inputType="number"
                android:layout_alignBaseline="@+id/dd"
                android:layout_alignBottom="@+id/dd"
                android:layout_toRightOf="@+id/dd"
                android:layout_toEndOf="@+id/dd" />

            <EditText
                android:id="@+id/yyyy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:hint="yyyy"
                android:inputType="number"
                android:layout_alignBaseline="@+id/mm"
                android:layout_alignBottom="@+id/mm"
                android:layout_toRightOf="@+id/mm"
                android:layout_toEndOf="@+id/mm" />

            <Button
                android:id="@+id/student_search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:layout_alignBaseline="@+id/yyyy"
                android:layout_alignBottom="@+id/yyyy"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/yyyy" />


        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/student_relativeLayout"

            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Student Details:"
                    android:textSize="35dp" />



                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/roll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Roll no."
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Branch"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/current_sem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Current semester"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/session"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Session"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/dobTextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DOB"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/fname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Father's name"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/mname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mother's name"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/mob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile no."
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Category"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email id"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fee Details:"
                    android:textSize="35dp" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Today's Date"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/feecategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fee category"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/feepayedtill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fee payed  till"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/totalpayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Total payment"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/totalfeepaid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Total fee paid"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/totalfeedue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Total fee due"
                    android:textSize="20dp" />


            </LinearLayout>
        </ScrollView>


    </RelativeLayout>


</RelativeLayout>
